{
  "name": "phpro/mage2-module-api-logger",
  "description": "Extension on API logging",
  "type": "magento2-module",
  "license": "MIT",
  "authors": [
    {
      "name": "PHPro NV",
      "email": "info@phpro.be",
      "homepage": "https://www.phpro.be/"
    }
  ],
  "require": {
    "php": "^8.0",
    "magento/framework": "^100.1|^101.0|^102.0|^103.0",
    "phpro/mage2-module-logger-handler": "^3.0.0|^4.0.0|^5.0.0"
  },
  "require-dev": {
    "phpro/grumphp-shim": "^2",
    "magento/magento-coding-standard": "*"
  },
  "autoload": {
    "psr-4": {
      "Phpro\\APILogger\\": ""
    },
    "files": [
      "registration.php"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    },
    {
      "type": "git",
      "url": "https://github.com/magento/marketplace-eqp"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/,,../../magento/php-compatibility-fork)"
    ],
    "post-update-cmd": [
      "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/,,../../magento/php-compatibility-fork)"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp-shim": true,
      "magento/composer-dependency-version-audit-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
